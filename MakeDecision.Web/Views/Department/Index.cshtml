@model IEnumerable<MakeDecision.Web.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            DepartmentName
        </th>
        <th>
            Categories
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.Id }) |
            @Html.ActionLink("明细", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.DepartmentName
        </td>
        <td>
			@(item.Categories == null ? "None" : item.Categories.Count.ToString())
            @Html.ActionLink("分类", "Create", "Category", new { departmentId = item.Id }, null)
        </td>
    </tr>
}

</table>


