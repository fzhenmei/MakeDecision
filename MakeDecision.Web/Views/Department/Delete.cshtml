@model MakeDecision.Web.Models.Department

@{
    ViewBag.Title = "删除";
}

<h2>删除</h2>

<h3>你确定要删除吗？</h3>
<fieldset>
    <legend>部门</legend>

    <div class="display-label">部门名称</div>
    <div class="display-field">@Model.DepartmentName</div>

    <div class="display-label">分类计数</div>
    <div class="display-field">@(Model.Categories == null ? "None" : Model.Categories.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="确认删除" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


