@model IEnumerable<MakeDecision.Web.Models.UserModel>
@{
    ViewBag.Title = "用户列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>用户列表</h2>
<p>
    @Html.ActionLink("添加用户", "Register", "Account")
</p>
<table style="width: 500px;">
    <tr>
        <th>
            用户名
        </th>
        <th>
            所属部门
        </th>
        <th>
            
        </th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
			@item.UserName
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Department.DepartmentName).ToString()
        </td>
        <td>
            @Html.ActionLink("删除", "Delete", "Account", new { userName = item.UserName}, null)
        </td>
    </tr>
}
</table>
@Html.Pager((int)ViewBag.PageSize, 1, (int)ViewBag.TotalCount)