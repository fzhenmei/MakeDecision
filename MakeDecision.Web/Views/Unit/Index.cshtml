@model IEnumerable<MakeDecision.Web.Models.Unit>

@{
    ViewBag.Title = "数据单位管理";
}

<h2>数据单位管理</h2>

<p>
    @Html.ActionLink("新建数据单位", "Create")
</p>
<table>
    <tr>
        <th>
            数据单位名称
        </th>
        <th>
            数据单位标签
        </th>
        <td>
            小数位
        </td>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
			@item.UnitName
        </td>
        <td>
            @item.UnitLabel
        </td>
        <td>
            @item.Digits
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
            @Html.ActionLink("明细", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


