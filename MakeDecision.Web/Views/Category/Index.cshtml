@model IEnumerable<MakeDecision.Web.Models.Category>

@{
    ViewBag.Title = "数据分类列表";
}

<h2>数据分类列表</h2>

<p>
    @Html.ActionLink("新建分类", "Create")
</p>
<table>
    <tr>
        <th>
            分类名称
        </th>
        <th>
            所属部门
        </th>
        <th>
            更新周期
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
			@Html.ActionLink(@item.CategoryName, "Details", new { id = item.Id })
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Department.DepartmentName).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Cycle.CycleName).ToString()
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id = item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id = item.Id }) |
            @Html.ActionLink("数据", "Create", "KeyData", new { categoryId = item.Id}, null)
        </td>
    </tr>
}

</table>


