<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <img src="@Url.Content("~/Content/logo.jpg")" alt="logo"/>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div style="clear: left;"></div>
        </div>
        <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("首页", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated && Roles.IsUserInRole(User.Identity.Name, "Admin"))
                    {
                    <li>@Html.ActionLink("部门管理", "Index", "Department")</li>
                    <li>@Html.ActionLink("数据单位", "Index", "Unit")</li>
                    <li>@Html.ActionLink("周期管理", "Index", "Cycle")</li>
                    <li>@Html.ActionLink("用户管理", "Index", "Account")</li>
                    }
                </ul>
            </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
